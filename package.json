{
  "name": "js-recorder",
  "author": "webberQian",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "example": "vite --config vite.config-example.ts",
    "build:example": "vue-tsc -b && vite build --config vite.config-example.ts",
    "build": "tsc --build ./tsconfig.lib.json  && vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "main": "./dist/js-recorder-library.umd.js",
  "module": "./dist/js-recorder-library.es.js",
  "browser": {
    "./dist/js-recorder-library.es.js": "./dist/js-recorder-library.es.js",
    "./dist/js-recorder-library.umd.js": "./dist/js-recorder-library.umd.js"
  },
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/js-recorder-library.es.js",
      "require": "./dist/js-recorder-library.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "/dist"
  ],
  "keywords": [
    "audio",
    "webaudio",
    "pcm",
    "wav",
    "js-recorder",
    "audio-recorder",
    "web-recorder",
    "前端录音",
    "js录音",
    "js-录音",
    "js-录音库",
    "录音"
  ],
  "dependencies": {
    "element-plus": "^2.8.8",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/dom-webcodecs": "^0.1.13",
    "@types/node": "^22.9.1",
    "@types/web": "^0.0.180",
    "@types/webaudioapi": "^0.0.27",
    "@vitejs/plugin-vue": "^5.1.4",
    "tslib": "^2.8.1",
    "typescript": "~5.6.3",
    "unplugin-auto-import": "^0.18.5",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitepress": "^1.5.0",
    "vue-tsc": "^2.1.8"
  }
}